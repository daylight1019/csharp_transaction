            <Image x:Name="ReceiptImageView" HorizontalAlignment="Left" Height="286" Margin="10,10,0,0" VerticalAlignment="Top" Width="219" Stretch="Fill"/>
        </materialDesign:Card>
    </Grid>
</Fluent:RibbonWindow>
